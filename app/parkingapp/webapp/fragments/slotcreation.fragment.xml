<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idslotcreationDialog"
        title="ParkingSlot creation"
        resizable="true"
        draggable="true"
        contentWidth="30%"
    >
        <beginButton>
            <Button
                id="idslotcreate"
                text="Create"
                type="Success"
                press="onCreate"
            />
        </beginButton>
        <endButton>
            <Button
                id="idslotcancel"
                text="Cancel"
                type="Negative"
                press="onClears"
            />
        </endButton>
        <form:SimpleForm
            id="idparkingform"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="3"
            labelSpanL="3"
            labelSpanM="3"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="4"
            emptySpanL="4"
            emptySpanM="4"
            emptySpanS="0"
            columnsXL="1"
            columnsL="1"
            columnsM="1"
            singleContainerFullSize="false"
        >
            <Label id="idslotcreatingidlabel" text="Parking Slot Number"/>
            <Input
                id="idslotcreatingidval"
                type="Number"
                value=""
            />
            <Label id="idslotcreatinglengthlabel" text="Length"/>
            <Input
                id="idslotcreatinglengthval"
                value=""
            />
            <!-- <Label id="idslotcreatinginwardlabel" text="Inward"/>
            <Input
                id="idslotcreatinginwardval"
                value=" "
            /> -->
            <Label id="idslotcreatingavialablelabel" text="Avialable" />
            <Input
                id="idslotcreatingavialableval"
                value="True"
                editable="false"
            />
        </form:SimpleForm>
    </Dialog>
</core:FragmentDefinition>
