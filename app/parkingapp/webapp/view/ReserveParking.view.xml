<mvc:View
    controllerName="com.app.parkingapp.controller.ReserveParking"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Table
        id="idReserveParkingtable"
        contextualWidth="Inherit"
        alternateRowColors="true"
        items="{/ReserveParking}"
        mode="MultiSelect"
    >
        <headerToolbar>
            <OverflowToolbar id="_IDGenOverflowToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="_IDGenButton1"
                    class="sapUiSmallMarginBeginEnd"
                    type="Reject"
                    icon="sap-icon://delete"
                    text="Delete"
                    press="onDelete"
                />
                <Button
                    id="_IDGenButton2"
                    class="sapUiSmallMarginBeginEnd"
                    type="Accept"
                    icon="sap-icon://add"
                    text="Add"
                    press="onAdd"
                />

                <Button
                    id="_IDGenButton3"
                    class="sapUiSmallMarginBeginEnd"
                    type="Accept"
                    icon="sap-icon://edit"
                    text="Edit"
                    enabled="true"
                    press="onEdit"
                />
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column id="idReserveparkingveh_id">
                <Title
                    id="reserveparkingveh_text"
                    text="ReserveID"
                />
            </Column>
            <Column id="idreservetruck">
                <Title
                    id="trucknumber"
                    text="TruckNumber"
                />
            </Column>
            <Column id="iddrivername">
                <Title
                    id="driverName"
                    text="DriverName"
                />
            </Column>
             <Column id="idreservedrivermobile">
                <Title
                    id="drivermobile"
                    text="DriverMobile"
                />
            </Column>
            <Column id="idres_staus">
                <Title
                    id="res_staus"
                    text="Status"
                />
            </Column>
            <Column id="idParkingLot_ID">
            <Title id="parkinglotid" text="PakingSlotID"></Title>
            </Column>
            <Column id="idConfDate">
            <Title id="idconfdate" text="ConfirmDate"></Title>
            </Column>
        </columns>

        <!-- items -->
        <items>
            <ColumnListItem id="idRescollist">
                <cells>
                    <Text
                        id="ReserveParkingvalue"
                        text="{id}"
                    />
                    <Text
                        id="ReservedParkingTruck"
                        text="{truckNo}"
                    />
                    <Text
                        id="ReservedParkingvalue"
                        text="{driverName}"
                    />
                    <Text
                        id="ReserveddriverNum"
                        text="{driverMob}"
                    />
                    <Text
                        id="ReservedParkingstatus"
                        text="{res_staus}"
                    />
                    <Text
                        id="ReservedParkingParkingLot"
                        text="{parkinglot_id}"
                    />
                    <Text
                        id="ReservedParkingConfDate"
                        text="{confDate}"
                    />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>
